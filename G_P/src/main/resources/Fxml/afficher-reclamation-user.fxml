<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane
        prefHeight="600.0"
        prefWidth="996.0"
        styleClass="form-background"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.abircode.cruddp.Controller.AfficherReclamationUserController">

   <children>
      <!-- ListView avec style personnalisé -->
      <ListView
              fx:id="lvreclamation"
              layoutX="58.0"
              layoutY="47.0"
              prefHeight="482.0"
              prefWidth="779.0"
              onMouseClicked="#reclamationselected"
              styleClass="reclamation-cell" />

      <!-- Bouton Supprimer stylisé -->
      <Button
              fx:id="btnsupp"
              layoutX="420.0"
              layoutY="542.0"
              mnemonicParsing="false"
              onAction="#supprimer"
              text="Supprimer"
              styleClass="submit-button" />

      <!-- Bouton Modifier stylisé (décalé de 220px à droite pour un plus grand écart) -->
      <Button
              fx:id="btnmodifier"
              layoutX="640.0"
              layoutY="542.0"
              mnemonicParsing="false"
              onAction="#modifier"
              text="Modifier"
              styleClass="submit-button" />

   </children>
</AnchorPane>
