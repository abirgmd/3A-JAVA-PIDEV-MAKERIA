<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<ScrollPane fx:id="scrollPane" prefHeight="600" prefWidth="1200" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.abircode.cruddp.Controller.EvaluationController">
    <VBox fx:id="evaluationListVBox" spacing="10" style="-fx-padding: 10;">
        <!-- Search Bar -->
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="searchField" promptText="Search Evaluations" onKeyReleased="#searchEvaluations" prefWidth="300"/>
        </HBox>

        <!-- Grid for Evaluation Cards -->
        <GridPane fx:id="cardGrid" hgap="20" vgap="20" style="-fx-padding: 10;">
            <!-- No ColumnConstraints in FXML, define them programmatically in the controller -->
        </GridPane>

        <!-- Pagination Controls -->
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button fx:id="prevButton" text="Previous" onAction="#prevPage" disable="true"/>
            <Button fx:id="nextButton" text="Next" onAction="#nextPage"/>
        </HBox>
    </VBox>
</ScrollPane>
