<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.FileChooser?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.abircode.cruddp.Controller.ImageCompatibilityController">
    <children>
        <!-- Upload Image Button -->
        <Button fx:id="uploadImageButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onUploadImage" text="Upload Image" />

        <!-- Label showing the selected image path -->
        <Label fx:id="imagePathLabel" layoutX="14.0" layoutY="60.0" text="No image selected" />

        <!-- Category ComboBox -->
        <ComboBox fx:id="categoryComboBox" layoutX="14.0" layoutY="100.0" prefWidth="200.0" />

        <!-- Analyze Button -->
        <Button fx:id="analyzeButton" layoutX="240.0" layoutY="100.0" mnemonicParsing="false" onAction="#onAnalyzeImageClicked" text="Analyze Image" />

        <!-- Response Text Area -->
        <TextArea fx:id="responseArea" layoutX="14.0" layoutY="150.0" prefWidth="300.0" prefHeight="200.0" editable="false" wrapText="true"/>
    </children>
</AnchorPane>
