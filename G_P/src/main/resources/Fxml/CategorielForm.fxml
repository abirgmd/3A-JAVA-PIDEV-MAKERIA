<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:controller="com.abircode.cruddp.Controller.CategoryController"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.171"
            prefHeight="600.0" prefWidth="1200.0"
            styleClass="main-container">

    <children>
        <!-- Search field at the top -->
        <TextField fx:id="searchField" promptText="Rechercher des catégories..." layoutX="20.0" layoutY="20.0" prefWidth="300.0" styleClass="search-field" />

        <!-- Add Category Button -->
        <Button text="Ajouter" onAction="#showCreateForm" layoutX="1000.0" layoutY="20.0" styleClass="add-button" prefWidth="150.0" prefHeight="30.0" />

        <!-- ScrollPane for category cards -->
        <ScrollPane layoutX="20.0" layoutY="60.0" prefHeight="500.0" prefWidth="1150.0" styleClass="card-container">
            <FlowPane fx:id="categoryFlowPane" hgap="10" vgap="10" style="-fx-padding: 10;">
                <!-- Category cards will be added here dynamically -->
            </FlowPane>
        </ScrollPane>

        <StackPane fx:id="formContainer" prefHeight="300.0">
            <!-- Formulaire d'ajout de catégorie -->
            <VBox fx:id="addCategoryForm" visible="false" spacing="10" styleClass="form-container">
                <TextField fx:id="nomcat" promptText="Nom de la catégorie" />
                <TextField fx:id="descriptioncat" promptText="Description" />
                <HBox spacing="10">
                    <Button text="Ajouter" onAction="#createCategory" styleClass="primary-button" />
                    <Button text="Annuler" onAction="#hideForms" styleClass="secondary-button" />
                </HBox>
            </VBox>

            <!-- Formulaire de mise à jour de catégorie -->
            <!-- Formulaire de mise à jour de catégorie -->
            <VBox fx:id="updateCategoryForm" visible="false" spacing="10" styleClass="form-container">
                <TextField fx:id="updateNomcat" promptText="Nom de la catégorie" />
                <TextField fx:id="updateDescriptioncat" promptText="Description" />
                <HBox spacing="10">
                    <Button text="Mettre à jour" onAction="#updateCategory" styleClass="primary-button" />
                    <Button text="Annuler" onAction="#hideForms" styleClass="secondary-button" />
                </HBox>
            </VBox>

        </StackPane>

    </children>
</AnchorPane>
