<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.abircode.cruddp.Controller.AfficherReplyAdminController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="RÉPONSES" />

    <TextField fx:id="searchField" promptText="Rechercher des réponses..."
               style="-fx-background-radius: 20; -fx-padding: 5 15;" />

    <ListView fx:id="repliesList"
              style="-fx-background-color: transparent; -fx-padding: 5;"
              VBox.vgrow="ALWAYS" />

    <Label fx:id="countLabel" style="-fx-text-fill: #666; -fx-font-style: italic;" />

</VBox>

