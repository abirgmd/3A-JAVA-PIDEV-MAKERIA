<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.abircode.cruddp.Controller.StatsController">
    <children>
        <Label text="Statistiques" layoutX="500.0" layoutY="10.0" prefWidth="600.0" prefHeight="100.0"
               style="-fx-font-size: 24px">
        </Label>

        <!-- Statistiques des Produits par Catégories -->
        <VBox alignment="TOP_CENTER" spacing="5" layoutX="50.0" layoutY="100.0" prefWidth="500.0" prefHeight="300.0"
              style=" -fx-border-radius: 10; -fx-border-width: 5; -fx-border-color: #dc2ade;">
            <Label text="Statistiques des Produits par Catégories"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #dc2ade; -fx-font-family: 'Joti One', sans-serif;" />
            <ComboBox fx:id="chartTypeComboBoxProduct" promptText="Sélectionnez le type de graphique" />
            <StackPane fx:id="chartContainerProduct" prefWidth="600.0" prefHeight="300.0" style="-fx-border-color: gray; -fx-border-width: 1;" />
        </VBox>

        <!-- Statistiques des Évaluations par Produits -->
        <VBox alignment="TOP_CENTER" spacing="5" layoutX="640.0" layoutY="100.0" prefWidth="500.0" prefHeight="300.0"
              style=" -fx-border-radius: 10; -fx-border-width: 5; -fx-border-color: #dc2ade;">

        <Label text="Statistiques des Évaluations par Produits"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #dc2ade; -fx-font-family: 'Joti One', sans-serif;" />
            <ComboBox fx:id="chartTypeComboBoxEvaluation" promptText="Sélectionnez le type de graphique" />
            <StackPane fx:id="chartContainerEvaluation" prefWidth="600.0" prefHeight="300.0" style="-fx-border-color: gray; -fx-border-width: 1;" />
        </VBox>
    </children>
</AnchorPane>
