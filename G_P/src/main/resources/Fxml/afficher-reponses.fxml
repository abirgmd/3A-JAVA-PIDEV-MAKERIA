<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane
        prefHeight="590.0"
        prefWidth="901.0"
        styleClass="form-background"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.abircode.cruddp.Controller.AfficherReponsesController">

   <children>
      <!-- ListView avec style personnalisé -->
      <ListView
              fx:id="lvreponse"
              layoutX="47.0"
              layoutY="46.0"
              prefHeight="495.0"
              prefWidth="742.0"
              styleClass="reclamation-cell" />

      <!-- Bouton Supprimer stylisé -->
      <Button
              fx:id="btnsupp"
              layoutX="420.0"
              layoutY="547.0"
              mnemonicParsing="false"
              onAction="#supprimer"
              text="Supprimer"
              styleClass="submit-button" />

      <!-- Bouton Modifier stylisé (décalé de 220px à droite pour un plus grand écart) -->
      <Button
              fx:id="btnmodifier"
              layoutX="640.0"
              layoutY="546.0"
              mnemonicParsing="false"
              onAction="#modifier"
              text="Modifier"
              styleClass="submit-button" />

   </children>
</AnchorPane>
